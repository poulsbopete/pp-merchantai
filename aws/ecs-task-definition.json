{
  "family": "pp-merchantai",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "pp-merchantai-app",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/pp-merchantai:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ELASTICSEARCH_HOST",
          "value": "ELASTICSEARCH_HOST_PLACEHOLDER"
        },
        {
          "name": "ELASTICSEARCH_PORT",
          "value": "443"
        },
        {
          "name": "ELASTICSEARCH_USERNAME",
          "value": "ELASTICSEARCH_USERNAME_PLACEHOLDER"
        },
        {
          "name": "ELASTICSEARCH_INDEX",
          "value": "pp-merchantai"
        },
        {
          "name": "ELASTICSEARCH_USE_SSL",
          "value": "true"
        },
        {
          "name": "DEMO_MODE",
          "value": "true"
        },
        {
          "name": "DEBUG",
          "value": "false"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pp-merchantai/openai-api-key"
        },
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pp-merchantai/anthropic-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/pp-merchantai",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 
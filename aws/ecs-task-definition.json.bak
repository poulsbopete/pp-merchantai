{
  "family": "pp-merchantai",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::461485115270:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::461485115270:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "pp-merchantai-app",
      "image": "461485115270.dkr.ecr.us-east-1.amazonaws.com/pp-merchantai:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ELASTICSEARCH_HOST",
          "value": ""
        },
        {
          "name": "ELASTICSEARCH_PORT",
          "value": "443"
        },
        {
          "name": "ELASTICSEARCH_USERNAME",
          "value": "ELASTICSEARCH_USERNAME_PLACEHOLDER"
        },
        {
          "name": "ELASTICSEARCH_INDEX",
          "value": "pp-merchantai"
        },
        {
          "name": "ELASTICSEARCH_USE_SSL",
          "value": "true"
        },
        {
          "name": "DEMO_MODE",
          "value": "true"
        },
        {
          "name": "DEBUG",
          "value": "false"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:461485115270:secret:pp-merchantai/openai-api-key"
        },
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:461485115270:secret:pp-merchantai/anthropic-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/pp-merchantai",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 